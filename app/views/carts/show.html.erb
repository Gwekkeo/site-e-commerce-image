<div class="wrapper">
	<% if !user_signed_in? %>
		<br>
		<div class="alert alert-danger" role="alert" style="text-align: center;">
			Connecte-toi pour voir le panier !
		</div>
	<% else %>
		<div class="container">
			<h3>Ton panier :</h3>
			<div class="info-cart">
				<span>Email :</span> <%= @name_user %><br>
				<span>ID:</span> <%= @id_user %><br>
				<span>Numéro du panier : <%= @cart_id %></span> 
			</div>
		
		<div class="container">
			<table class="table">
				<thead>
					<tr>
					<th scope="col">#</th>
					<th scope="col">Article</th>
					<th scope="col">Prix</th>
					<th scope="col"> </th>
					</tr>
				</thead>
				<tbody>
					<% @cart.each_with_index do |item, i| %>
					<tr>
					<th scope="row"><%= i+1 %></th>
					<td><%= Item.find(item.item_id).title %></td>
					<td><%= Item.find(item.item_id).price %> </td>
					<td><a class="btn-suppr" href="/carts/edit/<%= i+1 %>" >Supprimer</a></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>

	<% end %>

	<h2 class="total"><b>Total :</b> <%= @prix_total_panier_float %> € </h2>

	<a class="btn btn-success" href="<%= payment_path( @prix_total_panier_string ) %>">Passez commande</a>

</body>

</html>